<!doctype html>
<!-- This file is automatically generated from a *.form file. Do not modify it manually. -->
<html ng-app="page">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <link type="text/css" rel="stylesheet" href="//services/js/theme/resources.js/bootstrap.min.css">
	<link type="text/css" rel="stylesheet" href="/webjars/fontawesome/4.7.0/css/font-awesome.min.css">
	<link type="image/png" rel="shortcut icon" href="//services/web/resources/images/favicon.png" />
    <script type="text/javascript" src="/webjars/requirejs/2.3.6/require.min.js"></script>
    <script type="text/javascript" src="/webjars/jquery/3.6.0/jquery.min.js"></script>
    <script type="text/javascript" src="/webjars/bootstrap/3.3.7/js/bootstrap.min.js" async></script>
    <script type="text/javascript" src="/webjars/angularjs/1.8.2/angular.min.js"></script>
    <script type="text/javascript" src="/webjars/angularjs/1.8.2/angular-resource.min.js"></script>
    <script type="text/javascript" src="/webjars/angularjs/1.8.2/angular-sanitize.min.js"></script>
    <script src="//services/web/resources-core/ui/message-hub.js"></script>

    <script type="text/javascript" src="./${controller}"></script>

#foreach($next in $metadata.styles)
    <link type="text/css" rel="stylesheet" href="${next.url}">
#end

#foreach($next in $metadata.scripts)
    <script type="text/javascript" src="${next.url}"></script>
#end

</head>
<body class="container" ng-controller="PageController">
    <div id="form"> 
#foreach($next in $form)
#if($next.component == "header")
        <div class="form-group page-header container col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8"><h1>${next.label}</h1></div>
        </div>
#elseif($next.component == "section")
        <div class="form-group container col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8"><h3>${next.label}</h3></div>
        </div>
#elseif($next.component == "textInput")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">
                <input id="${next.id}" type="text" ng-model="data.${next.model}" class="form-control" placeholder="${next.placeholder}"/>
            </div>
        </div>
#elseif($next.component == "textArea")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">
                <textarea id="${next.id}" ng-model="${next.model}" class="form-control" placeholder="${next.placeholder}"></textarea>
            </div>
        </div>
#elseif($next.component == "email")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">
                <input id="${next.id}" type="text" ng-model="data.${next.model}" class="form-control" placeholder="${next.placeholder}"/>
            </div>
        </div>
#elseif($next.component == "select")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">
                <select id="${next.id}" ng-model="${next.model}" class="form-control" placeholder="${next.placeholder}" ng-options="option.key as option.label for option in ${next.options}"></select>
            </div>
        </div>
#elseif($next.component == "selectMultiple")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">
                <select id="${next.id}" ng-model="${next.model}" class="form-control" placeholder="${next.placeholder}" ng-options="option.key as option.label for option in ${next.options}" multiple></select>
            </div>
        </div>
#elseif($next.component == "checkbox")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">

#foreach($option in $next.options)
                <div class="checkbox">
                    <label>
                        <input id="${next.id}" type="checkbox" ng-model="${next.model}[$velocityCount]" value="${option}">
                        ${option}
                    </label>
                </div>
#end
            </div>
        </div>
#elseif($next.component == "radio")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">

#foreach($option in $next.options)
                    <label>
                        <input id="${next.id}" type="radio" ng-model="${next.model}" value="${option}">
                        ${option}
                    </label>
#end
            </div>
        </div>
#elseif($next.component == "paragraph")
        <div class="form-group container col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8"><p>${next.label}</p></div>
        </div>
#elseif($next.component == "code")
        <div class="form-group container col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8"><code>${next.label}</code></div>
        </div>
#elseif($next.component == "pre")
        <div class="form-group container col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8"><pre>${next.label}</pre></div>
        </div>
#elseif($next.component == "inject")
        <div class="form-group container col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8">${next.label}</div>
        </div>
#end
#end

        <div class="form-group container col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8">
#foreach($next in $form)
#if($next.component == "button")
        
                <button id="${next.id}" ng-click="${next.model}($event)" class="btn btn-primary">${next.label}</button>
        
#end
#end
            </div>
        </div>

    </div>
    
</body>
</html>
