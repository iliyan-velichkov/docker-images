<hibernate-mapping>

    <class entity-name="OrderItem" table="ORDER_ITEMS" >

        <id name="id"
            type="long"
            column="ORDERITEM_ID">
            <generator class="sequence"/>
        </id>
        
        <property name="orderId"
            column="ORDER_ID"
            type="long"/>

        <property name="name"
            column="ORDERITEM_NAME"
            type="string"/>

    </class>
    
</hibernate-mapping>