            <artifactId>dirigible-components-api-modules-javascript</artifactId>
            <version>9.0.0-SNAPSHOT</version>
        </dependency>

        <!-- Components -->
        <dependency>
            <groupId>org.eclipse.dirigible</groupId>
            <artifactId>dirigible-components-core-repository</artifactId>
